@model MvcMovies.Models.Film

@{
    ViewData["Title"] = "Brisanje";
}

<h1>Brisanje</h1>

<h3>Da li ste sigurni da želite da obrišete?</h3>
<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Naslov)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Naslov)
        </dd>
        <dt class = "col-sm-2">
            Početak prikazivanja
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DatumPocetkaPrikazivanja)
        </dd>
        <dt class = "col-sm-2">
            Žanr
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Zanr)
        </dd>
        <dt class = "col-sm-2">
            Uloženo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ulozeno)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Povratak na spisak filmova</a>
    </form>
</div>
